@{
    ViewData["Title"] = "Welcome to ChatApp";
}

<div class="hero-section bg-primary text-white text-center py-5 mb-5 rounded">
    <div class="container">
        <h1 class="display-4 fw-bold mb-3">
            <i class="fas fa-comments me-3"></i>Welcome to ChatApp
        </h1>
        <p class="lead mb-4">Connect instantly with friends and colleagues through real-time messaging</p>
        <div class="d-flex justify-content-center gap-3">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Chat" asp-action="Index" class="btn btn-light btn-lg">
                    <i class="fas fa-user me-2"></i>Private Chat
                </a>
                <a asp-controller="Chat" asp-action="Groups" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-users me-2"></i>Group Chat
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Get Started
                </a>
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </a>
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon text-primary mb-3">
                        <i class="fas fa-bolt fa-3x"></i>
                    </div>
                    <h4 class="card-title">Real-time Messaging</h4>
                    <p class="card-text">Send and receive messages instantly with our WebSocket-powered chat system.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon text-success mb-3">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <h4 class="card-title">Group Conversations</h4>
                    <p class="card-text">Create groups and chat with multiple people at once. Perfect for teams and communities.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <div class="feature-icon text-warning mb-3">
                        <i class="fas fa-image fa-3x"></i>
                    </div>
                    <h4 class="card-title">Image Sharing</h4>
                    <p class="card-text">Share photos and images easily with support for multiple formats and file sizes.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-rocket me-2"></i>Getting Started</h5>
                </div>
                <div class="card-body">
                    <ol class="list-group list-group-numbered list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Create Account</div>
                                Sign up with your email address
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Start Chatting</div>
                                Select users or create groups
                            </div>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div class="ms-2 me-auto">
                                <div class="fw-bold">Share Content</div>
                                Send messages and images
                            </div>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Features</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Real-time messaging with SignalR
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Private and group conversations
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Image sharing with previews
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Online status indicators
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Typing indicators
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Message history with pagination
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Responsive design
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Clean Architecture with CQRS
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @if (!User.Identity?.IsAuthenticated == true)
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Ready to get started?</h5>
                        <p class="card-text">Join thousands of users already chatting on ChatApp.</p>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Create Free Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #007bff, #0056b3);
    }

    .feature-icon {
        transition: transform 0.3s ease;
    }

    .card:hover .feature-icon {
        transform: translateY(-5px);
    }

    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }
</style>