@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Privacy Policy</h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <p class="lead">Your privacy is important to us. This privacy policy explains how ChatApp collects, uses, and protects your information.</p>
                    </div>

                    <h4 class="text-primary mb-3">Information We Collect</h4>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item">
                            <strong>Account Information:</strong> Email address and display name
                        </li>
                        <li class="list-group-item">
                            <strong>Messages:</strong> Chat messages and images you send
                        </li>
                        <li class="list-group-item">
                            <strong>Usage Data:</strong> Login times and activity status
                        </li>
                    </ul>

                    <h4 class="text-primary mb-3">How We Use Your Information</h4>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item">Provide and maintain the chat service</li>
                        <li class="list-group-item">Deliver messages to intended recipients</li>
                        <li class="list-group-item">Show online/offline status to other users</li>
                        <li class="list-group-item">Store chat history for your convenience</li>
                    </ul>

                    <h4 class="text-primary mb-3">Data Security</h4>
                    <p>We implement appropriate security measures to protect your personal information against unauthorized access, alteration, disclosure, or destruction.</p>

                    <h4 class="text-primary mb-3">Data Retention</h4>
                    <p>We retain your data as long as your account is active. You may request deletion of your account and associated data at any time.</p>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Demo Application:</strong> This is a demonstration application. In a production environment, additional privacy protections and compliance measures would be implemented.
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>